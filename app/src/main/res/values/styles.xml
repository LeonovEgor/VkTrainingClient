<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
<!--        <item name="android:windowBackground">@drawable/vk</item>-->
    </style>

    <style name="LoginStyle" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MarginView" parent="AppTheme">
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Title" parent="MarginView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleValue" parent="Title">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Text" parent="MarginView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextValue" parent="Text">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>


</resources>
